CREATE TABLE user (
    id varchar(100) NOT NULL,
	user_name varchar(20) NOT NULL,
	first_name varchar(30),
   	middle_name varchar(30),
	last_name varchar(30),
	password varchar(255) NOT NULL,
	email_id varchar(50) NOT NULL,
	is_enabled BIT(1) NOT NULL DEFAULT 0,
	is_account_expired BIT(1) NOT NULL DEFAULT 0,
	is_account_locked BIT(1) NOT NULL DEFAULT 0,
	is_credential_expired BIT(1) NOT NULL DEFAULT 0,
	is_email_verified BIT(1) NOT NULL DEFAULT 0,
	created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    PRIMARY KEY (id),
    CONSTRAINT UC_User UNIQUE (user_name)
);

CREATE TABLE user_group (
    id varchar(100) NOT NULL,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    group_name varchar(50) NOT NULL,
    created_by varchar(20) NOT NULL,
    updated_by varchar(20) NOT NULL,
    description varchar(50),
    is_enabled BIT(1) NOT NULL DEFAULT 0,
    PRIMARY KEY(id),
    CONSTRAINT UC_User_Group UNIQUE(group_name)
);

CREATE TABLE group_authority(
    id varchar(100) NOT NULL,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    created_by varchar(20) NOT NULL,
    updated_by varchar(20) NOT NULL,
    authority varchar(30) NOT NULL,
    type varchar(10) NOT NULL,
    PRIMARY KEY(id),
    FOREIGN KEY fk_user_group_id REFERENCES user_group(id)
);

CREATE TABLE user_auth_group (
    user_id INTEGER,
    group_id INTEGER,
    FOREIGN KEY(user_id) REFERENCES user(id),
    FOREIGN KEY(group_id) REFERENCES user_group(id)
);